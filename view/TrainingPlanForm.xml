<record id="view_training_plan_form" model="ir.ui.view">
    <field name="name">mootiv.training_plan.form</field>
    <field name="model">mootiv.training_plan</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="student_id"/>
                </group>
                <group string="Training Cycles">
                    <field name="training_cycles_ids">
                        <tree editable="bottom">
                            <field name="start_date"/>
                            <field name="goal_id"/>
                            <field name="training_type_id"/>
                            <field name="status"/>
                        </tree>
                    </field>
                </group>
            </sheet>
        </form>
    </field>
</record>
