<record id="view_training_day_form" model="ir.ui.view">
    <field name="name">mootiv.training_day.form</field>
    <field name="model">mootiv.training_day</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="finish_date"/>
                    <field name="is_completed" readonly="1"/>
                </group>
                <group string="Exercises">
                    <field name="exercises_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="duration"/>
                            <field name="repetitions"/>
                        </tree>
                    </field>
                </group>
            </sheet>
        </form>
    </field>
</record>
