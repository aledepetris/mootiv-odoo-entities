<record id="view_exercise_routine_form" model="ir.ui.view">
    <field name="name">mootiv.exercise_routine.form</field>
    <field name="model">mootiv.exercise_routine</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="exercise_id"/>
                    <field name="sets"/>
                    <field name="repetitions"/>
                    <field name="weight"/>
                    <field name="rest"/>
                    <field name="notes"/>
                </group>
            </sheet>
        </form>
    </field>
</record>
