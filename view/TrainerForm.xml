<record id="view_trainer_form" model="ir.ui.view">
    <field name="name">mootiv.trainer.form</field>
    <field name="model">mootiv.trainer</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="dni"/>
                    <field name="name"/>
                    <field name="last_name"/>
                    <field name="email"/>
                    <field name="telephone"/>
                    <field name="birthdate"/>
                    <field name="age" readonly="1"/>
                    <field name="active"/>
                </group>
                <group string="Students">
                    <field name="students_ids">
                        <tree>
                            <field name="name"/>
                            <field name="last_name"/>
                            <field name="email"/>
                            <field name="telephone"/>
                        </tree>
                    </field>
                </group>
            </sheet>
        </form>
    </field>
</record>
