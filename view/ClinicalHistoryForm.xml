<record id="view_clinical_history_form" model="ir.ui.view">
    <field name="name">mootiv.clinical_history.form</field>
    <field name="model">mootiv.clinical_history</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="condition_ids">
                        <tree editable="bottom">
                            <field name="affection_id"/>
                            <field name="diagnosis_date"/>
                            <field name="severity"/>
                            <field name="current_status"/>
                            <field name="notes"/>
                        </tree>
                    </field>
                </group>
            </sheet>
        </form>
    </field>
</record>
